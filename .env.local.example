# Local Network Mobile Testing Configuration
# Copy this file to .env.local and fill in all values.
#
# Find your Mac's local IP address:
#   Wi-Fi:    ipconfig getifaddr en0
#   Ethernet: ipconfig getifaddr en1
#
# Then access the app from your iPhone at: http://<YOUR_IP>:8000

# =============================================================================
# Mobile Network Access (replace 192.168.x.x with your actual local IP)
# =============================================================================
ALLOWED_HOSTS=192.168.x.x
CSRF_TRUSTED_ORIGINS=http://192.168.x.x:8000

# =============================================================================
# Django Settings
# =============================================================================
PORT=8000
DEBUG=True
DJANGO_SETTINGS_MODULE=wms.settings
SECRET_KEY=dev-insecure-change-me

# =============================================================================
# Database (copy from lightsail/containers.json or use local DB)
# =============================================================================
DB_NAME=
DB_USER=
DB_PASSWORD=
DB_HOST=
DB_PORT=5432
PGSSLMODE=require

# =============================================================================
# AWS S3 (for media storage; set USE_S3=False for local file storage)
# =============================================================================
USE_S3=True
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
